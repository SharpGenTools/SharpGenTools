<Project Sdk="Microsoft.NET.Sdk">

  <Sdk Name="Microsoft.Build.CentralPackageVersions" />

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;netstandard2.0;net471;net45;netstandard1.1</TargetFrameworks>
    <Description>Support classes for code generated by SharpGen.</Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Net.Compilers.Toolset" />

    <PackageReference Include="System.Memory" Condition="'$(TargetFramework)' != 'netstandard2.1'" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" />
    <PackageReference Include="System.Runtime.InteropServices.RuntimeInformation" Condition="'$(TargetFramework)' != 'netstandard2.1' and '$(TargetFramework)' != 'netstandard2.0' and '$(TargetFramework)' != 'net471'" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Mapping.xml" PackagePath="build" />
    <Content Include="SharpGen.Runtime.props" PackagePath="build;buildMultiTargeting" />
  </ItemGroup>

</Project>
